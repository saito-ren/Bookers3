<div class="container">
	<div class="row">
		<div class="col-xs-3">
          <%= render "books/list", book: @book, user: @user %>
        </div>
        <div class="col-xs-9">

			<% if flash[:notice] %>
			  <p><%= flash[:notice] %></p>
			<% end %>

			<h2>Books</h2>

			<table>
				<thead>
				  <tr>
					  <th>title</th>
					  <th>opinion</th>
					  <!-- 水平方向の統合 -->
					  <th colspan="3"></th>
				  </tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
				      <tr>
				      	<td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %></td>
					    <td><%= link_to book.title, book_path(book.id) %></td>
					    <td><%= book.body %></td>
					  </tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


